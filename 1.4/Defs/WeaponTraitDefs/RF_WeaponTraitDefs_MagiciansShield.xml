		<isShield>true</isShield>
		<shieldRechargeRate>0.04</shieldRechargeRate>
		<shieldEnergyMax>1.75</shieldEnergyMax>
		<shieldTexPath>Other/RF_ShieldBubble</shieldTexPath>
		<shieldTexStuffPostfix>true</shieldTexStuffPostfix>
		<shieldCombatRecovery>true</shieldCombatRecovery>
		<ignoreRechargeDelay>false</ignoreRechargeDelay>
		<deflectMeleeChance>0.60</deflectMeleeChance>
		<deflectRangeChance>0.90</deflectRangeChance>
		<!--<fleckDefOnDeflect>ElectricalSpark</fleckDefOnDeflect>-->
