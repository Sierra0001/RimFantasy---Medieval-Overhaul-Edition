<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========== Magic Bolt Projectiles  ==========-->
  <!--========== Used for all rings.  ==========-->

  <!--========== Emerald Magic Bolt ==========-->

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>RF_MagicBolt_Ring_Emerald</defName>
    <label>enchanted emerald ring effect</label>
    <graphicData>
      <texPath>Things/Projectile/RF_LargeMagicBolt_Emerald</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1.2</drawSize>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>RF_MagicBolt_EmeraldRing</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <stoppingPower>1</stoppingPower>
      <armorPenetrationBase>0.15</armorPenetrationBase>
      <speed>40</speed>
      <explosionRadius>2</explosionRadius>
      <preExplosionSpawnThingDef>RF_RubbleShardsRF_Emerald</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.05</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
    </projectile>
  </ThingDef>

