<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<RimFantasy.ArcaneWeaponTraitDef>
		<defName>RF_MinorBane</defName>
		<label>minor bane</label>
		<description>Enchanted with lower nature magic, this weapon can sometimes unleash a weak wave of magical energy and may cause toxic buildup.</description>
    <exclusionTags>
			<li>RF_Bane</li>
			<li>RF_MajorBane</li>
    </exclusionTags>
		<workerClass>RimFantasy.ArcaneWeaponTraitWorker</workerClass>
		<weaponEffects>
			<li Class="RimFantasy.WeaponEffect_Multiple">
				<effectChance>0.60</effectChance>
				<weaponEffects>
					<li Class="RimFantasy.WeaponEffect_ApplyHediff">
						<hediffDef>ChemicalBurn</hediffDef>
						<baseDamageValue>2</baseDamageValue>
						<severityOffset>0.5</severityOffset> <!-- Needs Testing -->
						<fleckDefOnTarget>RF_Fleck_BlastEmerald_Round</fleckDefOnTarget>
					</li>
					<li Class="RimFantasy.WeaponEffect_ApplyHediff">
						<hediffDef>ToxicBuildup</hediffDef>
						<severityOffset>-0.25</severityOffset>
					</li>
				</weaponEffects>
			</li>
		</weaponEffects>
		<commonality>4</commonality>
		<marketValueOffset>200</marketValueOffset>
	</RimFantasy.ArcaneWeaponTraitDef>

